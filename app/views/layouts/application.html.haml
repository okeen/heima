%html
    %head
        = stylesheet_link_tag    "application" 
        = javascript_include_tag "application" 
        = stylesheet_link_tag    params[:controller] #if exists_asset? "#{params[:controller]}.css"
        = javascript_include_tag  params[:controller] #if exists_asset? "#{params[:controller]}.js"
        = csrf_meta_tags 
        = yield :metadata 
        %title Heima #{t"#{params[:controller]}.title"}

    %body{:data=> {:locale=> I18n.locale, :page=> [controller_name.capitalize, action_name.capitalize].join}}
          
        #content_container
            #header_container 
                = render :partial => "shared/header"
            #content
                = yield 
            #footer_root
        #footer_container
            = render :partial => "shared/footer"
